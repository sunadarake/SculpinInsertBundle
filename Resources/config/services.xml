<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <parameters>
    <parameter key="sculpin_insert.converter.class">Darake\SculpinInsertBundle\PostInsertConverter</parameter>
  </parameters>

  <services>
    <service id="sculpin_insert.converter" class="%sculpin_insert.converter.class%">
      <argument type="service" id="sculpin.site_configuration" />
      <argument>%sculpin_insert.insert_content%</argument>
      <tag name="kernel.event_subscriber" />
    </service>
  </services>

</container>